<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.opentosca</groupId>
    <artifactId>update-site.opentosca.org</artifactId>
    <version>1.0.0</version>

    <packaging>pom</packaging>

    <properties>
        <p2-maven-plugin.version>1.1.1</p2-maven-plugin.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <!--
                p2-maven-plugin: Used to build the P2 repository.
                GitHub: https://github.com/reficio/p2-maven-plugin
                Repository: http://repo.reficio.org/maven/org/reficio/p2-maven-plugin
                -->
                <groupId>org.reficio</groupId>
                <artifactId>p2-maven-plugin</artifactId>
                <version>${p2-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>site</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <!--
                                ===============================================
                                === Apache jclouds
                                ===============================================
                                -->
                                <artifact>
                                    <id>org.apache.jclouds:jclouds-core:2.0.1</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.jclouds:jclouds-blobstore:2.0.1</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.jclouds:jclouds-all:2.0.1</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.jclouds:jclouds-allcompute:2.0.1</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.jclouds.driver:jclouds-slf4j:2.0.1</id>
                                </artifact>
                                <!--
                                ===============================================
                                === Google
                                ===============================================
                                -->
                                <artifact>
                                    <id>com.google.guava:guava:21.0</id>
                                </artifact>
                                <!--
                                ===============================================
                                === Apache Commons
                                ===============================================
                                -->
                                <artifact>
                                    <id>commons-lang:commons-lang:2.6</id>
                                </artifact>
                                <artifact>
                                    <id>commons-io:commons-io:2.4</id>
                                </artifact>
                                <artifact>
                                    <id>commons-collections:commons-collections:3.2.2</id>
                                </artifact>
                                <artifact>
                                    <id>commons-beanutils:commons-beanutils:1.8.3</id>
                                </artifact>
                                <artifact>
                                    <id>commons-fileupload:commons-fileupload:1.3.2</id>
                                </artifact>
                                <artifact>
                                    <id>commons-net:commons-net:3.6</id>
                                </artifact>
                                <artifact>
                                    <id>commons-codec:commons-codec:1.9</id>
                                </artifact>
                                <artifact>
                                    <id>commons-logging:commons-logging:1.2</id>
                                </artifact>
                                <artifact>
                                    <id>commons-validator:commons-validator:1.6</id>
                                </artifact>
                                <artifact>
                                    <id>commons-jxpath:commons-jxpath:1.3</id>
                                </artifact>
                                <artifact>
                                    <id>commons-chain:commons-chain:1.2</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.commons:commons-exec:1.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.commons:commons-lang3:3.3.2</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.commons:commons-pool2:2.4.2</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.commons:commons-digester3:3.2</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.commons:commons-configuration2:2.1.1</id>
                                </artifact>
                                <!--
                                ===============================================
                                === Apache Camel
                                ===============================================
                                -->
                                <artifact>
                                    <id>org.apache.camel:camel-core:2.18.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.camel:camel-core-osgi:2.18.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.camel:camel-spring:2.18.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.camel:camel-cxf:2.18.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.camel:camel-cxf-transport:2.18.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.camel:camel-jms:2.18.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.camel:camel-http:2.18.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.camel:camel-jackson:2.18.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.camel:camel-jetty:2.18.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.camel:camel-jaxb:2.18.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.camel:camel-stream:2.18.3</id>
                                </artifact>
                                <!--
                                ===============================================
                                === Apache HTTP Client
                                ===============================================
                                -->
                                <artifact>
                                    <id>org.apache.httpcomponents:httpcore:4.4.6</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.httpcomponents:httpclient:4.5.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.httpcomponents:httpcore-osgi:4.4.6</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.httpcomponents:httpclient-osgi:4.5.3</id>
                                </artifact>
                                <artifact>
                                    <id>org.apache.httpcomponents:httpclient-cache:4.5.3</id>
                                </artifact>
                                <!--
                                ===============================================
                                === Eclipse JPA
                                ===============================================
                                -->
                                <artifact>
                                    <id>org.eclipse.persistence:org.eclipse.persistence.jpa:2.4.2</id>
                                </artifact>
                                <artifact>
                                    <id>org.eclipse.persistence:org.eclipse.persistence.osgi:2.4.2</id>
                                </artifact>
                                <artifact>
                                    <id>org.eclipse.persistence:org.eclipse.persistence.equinox:2.4.2</id>
                                </artifact>
                                <!--
                                ===============================================
                                === FasterXML/jackson
                                ===============================================
                                -->
                                <artifact>
                                    <id>com.fasterxml.jackson.core:jackson-core:2.8.7</id>
                                </artifact>
                                <artifact>
                                    <id>com.fasterxml.jackson.core:jackson-databind:2.8.7</id>
                                </artifact>
                                <artifact>
                                    <id>com.fasterxml.jackson.core:jackson-annotations:2.8.7</id>
                                </artifact>
                                <artifact>
                                    <id>com.fasterxml.jackson.jaxrs:jackson-jaxrs-base:2.8.7</id>
                                </artifact>
                                <artifact>
                                    <id>com.fasterxml.jackson.jaxrs:jackson-jaxrs-json-provider:2.8.7</id>
                                </artifact>
                                <artifact>
                                    <id>com.fasterxml.jackson.jaxrs:jackson-jaxrs-xml-provider:2.8.7</id>
                                </artifact>
                                <artifact>
                                    <id>com.fasterxml.jackson.jaxrs:jackson-jaxrs-yaml-provider:2.8.7</id>
                                </artifact>
                                <!--
                                ===============================================
                                === TODO: (Michael W.) Are those libraries required?
                                ===============================================
                                -->
                                <artifact>
                                    <id>wsdl4j:wsdl4j:1.6.2</id>
                                </artifact>
                                <artifact>
                                    <id>com.sun.jersey:jersey-client:1.19.3</id>
                                </artifact>
                                <artifact>
                                    <id>com.sun.jersey.contribs:jersey-multipart:1.19.3</id>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!--
            maven-antrun-plugin: Copies the built repository into the `docs` directory.
            -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>copy-p2-repository</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target name="Copy P2 Repository">
                                <delete includeEmptyDirs="true">
                                    <fileset dir="${project.basedir}/docs/${project.version}"/>
                                </delete>
                                <mkdir dir="${project.basedir}/docs/${project.version}"/>
                                <copy todir="${project.basedir}/docs/${project.version}">
                                    <fileset dir="${project.basedir}/target/repository"/>
                                </copy>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!--
            jetty-maven-plugin: For local testing purposes. You can run `mvn jetty:run` in order
            to serve the P2 repository on http://localhost:9000/repository.
            -->
            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>9.3.16.v20170120</version>
                <configuration>
                    <httpConnector>
                        <port>9000</port>
                    </httpConnector>
                    <scanIntervalSeconds>10</scanIntervalSeconds>
                    <webAppSourceDirectory>${project.basedir}/target/repository</webAppSourceDirectory>
                    <webApp>
                        <contextPath>/repository</contextPath>
                    </webApp>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <pluginRepositories>
        <pluginRepository>
            <id>repo.reficio.org</id>
            <url>http://repo.reficio.org/maven/</url>
        </pluginRepository>
    </pluginRepositories>

</project>